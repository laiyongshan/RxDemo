<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:background="@color/colorPrimary"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/img_back"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            />


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/period_spinner"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            app:ms_background_color="@color/colorPrimary"
            app:ms_hide_arrow="false"
            app:ms_text_color="#ffffff"
            android:layout_toLeftOf="@+id/lottery_spinner"
            />


        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/lottery_spinner"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@null"
            app:ms_background_color="@color/colorPrimary"
            app:ms_hide_arrow="false"
            app:ms_text_color="#ffffff"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/pool_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="奖金池金额："
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/sales_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="销售金额："
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/awardDateTime_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开奖时间："
        android:padding="8dp"
        />


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开奖号码"
                android:textSize="16sp"
                android:textColor="#000"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_weight="7"
                >

                <TextView
                    android:id="@+id/awardNumber_1"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="#f00"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/awardNumber_2"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="#f00"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/awardNumber_3"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="#f00"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/awardNumber_4"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="#f00"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/awardNumber_5"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="#f00"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/awardNumber_6"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="#f00"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/awardNumber_7"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:background="#00f"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/awards_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        />



</LinearLayout>